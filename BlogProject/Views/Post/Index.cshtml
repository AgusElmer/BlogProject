@model IEnumerable<BlogProject.Models.Post>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Post List</h2>

        </div>
        <div class="col-6 text-right">
            <a asp-controller="Post" asp-action="Create" class="btn btn-primary">
                Create New Post
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class=" table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Post Name</th>
                    <th>Content</th>
                    <th>Image</th>
                    <th>CreationDate</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(obj => obj.CreationDate)) //Order by Date
                {
                    <tr>
                        <td width="50%">@obj.Title</td>
                        <td width="30%">@obj.Image</td>
                        <td width="30%">@obj.CreationDate</td>

                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Post" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    Edit
                                </a>
                                <a asp-controller="Post" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Post exists.</p>
    }
</div>

